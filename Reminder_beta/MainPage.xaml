<Page
    x:Class="Reminder_beta.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Reminder_beta"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid  Width="auto" Margin="0,-35,0,0" Height="640">
        <Grid.Background>
            <SolidColorBrush Color="#FF024BA2"/>
        </Grid.Background>

        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Reminder" VerticalAlignment="Top" Margin="25"  Height="66" Width="190" FontSize="40" FontFamily="Comic Sans MS" FontStyle="Italic"/>
        <Button x:Name="NavigateToReminders" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,195,0,0" Height="48" Width="340" FontSize="24" Click="NavigateToReminders_click" Content="My reminders" Background="#FF30B95C"/>
        <Button x:Name="NavigateToSettings"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,379,0,0" Height="48" Width="340" FontSize="24" Background="#FFF55104" Content="Settings" Click="NavigateToSettings_Click">


        </Button>




    </Grid>
</Page>
